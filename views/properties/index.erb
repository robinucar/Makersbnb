<div style='float: left'>
  <% if @user %>
  Logged in as <%= @user.email %>
  |
  <a href='/'>Sign out</a>
  <% end %>
</div>

<div style='float: right'>
  <a href='/properties'>Properties</a>|
  <a href=''>Requests</a>
</div>

<br><br><br>
<center>
<h1>Book a Property </h1>

<form action='/properties' method='post'>
  <input type='submit' value='List a Property'>
</form>

<% @properties.each do |property| %>
  Property name: <%= property.name %>
  <br>
  Property description: <%= property.description %>
  <br>
  Price per night: <%= property.price %>
  <br>
  Available from: <%= property.available_from_formatted %>
  <br>
  Available until: <%= property.available_until_formatted %>
  <br>
  <form action='/properties/<%= property.id %>' method='get' class='property'>
    <input type='submit' value='Book' />
  </form>
  <br>
  <br>
<% end %>
